@model EmployeeManagementSystem.Models.Employee

<h2>Delete Employee</h2>
<hr />

<div class="alert alert-danger">
    <strong>Warning:</strong> Are you sure you want to delete this employee?
    This action cannot be undone.
</div>

<div class="mb-3">
    <label class="fw-bold">Name:</label>
    <p>@Model.Name</p>
</div>

<div class="mb-3">
    <label class="fw-bold">Email:</label>
    <p>@Model.Email</p>
</div>

<div class="mb-3">
    <label class="fw-bold">Picture:</label><br />
    @if (!string.IsNullOrEmpty(Model.PicturePath))
    {
        <img src="@Model.PicturePath" alt="@Model.Name"
             style="width: 100px; height: 100px; object-fit: cover;" />
    }
    else
    {
        <p>No picture available</p>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
